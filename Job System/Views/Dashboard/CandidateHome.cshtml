@model IEnumerable<JobPortal.Models.Job>
@{
    ViewData["Title"] = "Candidate Dashboard";
}

<div class="container-fluid py-4">
    <div class="row">
        <!-- Left Sidebar - Filters -->
        <div class="col-md-3">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="mb-3">Filters</h5>
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Experience Level</label>
                            <select class="form-select">
                                <option>Entry Level</option>
                                <option>Mid Level</option>
                                <option>Senior Level</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Job Type</label>
                            <div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="fullTime">
                                    <label class="form-check-label" for="fullTime">Full-time</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="partTime">
                                    <label class="form-check-label" for="partTime">Part-time</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="remote">
                                    <label class="form-check-label" for="remote">Remote</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Salary Range</label>
                            <select class="form-select">
                                <option>$0 - $50k</option>
                                <option>$50k - $100k</option>
                                <option>$100k - $150k</option>
                                <option>$150k+</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Main Content - Job Listings -->
        <div class="col-md-9">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <form class="d-flex gap-2">
                        <input type="search" class="form-control" placeholder="Search jobs...">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </form>
                </div>
            </div>

            @foreach (var job in Model)
            {
                <div class="card shadow-sm mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">@job.Title</h5>
                                <p class="text-muted mb-2">@job.Company • @job.Location</p>
                                <div class="mb-2">
                                    <span class="badge bg-success me-2">@job.Type</span>
                                    <span class="badge bg-info">@job.Salary</span>
                                </div>
                                <p class="mb-2">@job.Description</p>
                                <small class="text-muted">Posted @job.PostedDate.ToString("MMM dd, yyyy")</small>
                            </div>
                            <div class="d-flex flex-column gap-2">
                                <a asp-controller="Job" asp-action="Apply" asp-route-id="@job.Id"
                                   class="btn btn-primary">Apply Now</a>
                                <button class="btn btn-outline-secondary">
                                    <i class="bi bi-bookmark"></i> Save
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>