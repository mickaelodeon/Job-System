@model IEnumerable<JobPortal.Models.Job>
@{
    ViewData["Title"] = "Jobs";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Available Positions</h2>
        </div>
        <div class="col-md-4">
            <input type="search" class="form-control" placeholder="Search jobs..." />
        </div>
    </div>

    <div class="row g-4">
        @foreach (var job in Model)
        {
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="card-title">@job.Title</h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    @job.Company • @job.Location
                                </h6>
                            </div>
                            <a href="#" class="btn btn-primary">Apply Now</a>
                        </div>

                        <div class="mb-2">
                            <span class="badge bg-success me-2">@job.Type</span>
                            <span class="badge bg-info">@job.Salary</span>
                        </div>

                        <p class="card-text">@job.Description</p>
                        <small class="text-muted">Posted @job.PostedDate.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>