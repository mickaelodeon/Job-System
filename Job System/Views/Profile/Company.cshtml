@{
    ViewData["Title"] = "Company Profile";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <img src="https://via.placeholder.com/150" class="rounded" alt="Company Logo">
                    </div>
                    <h4 class="card-title">Tech Corp</h4>
                    <p class="text-muted">Technology</p>
                    <div class="d-grid">
                        <button class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </button>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Company Information</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <i class="bi bi-globe me-2"></i> www.techcorp.com
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-envelope me-2"></i> careers@techcorp.com
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-phone me-2"></i> (555) 123-4567
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-geo-alt me-2"></i> New York, NY
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <h5 class="card-title">About Us</h5>
                    <p>Tech Corp is a leading technology company specializing in innovative software solutions for businesses worldwide.</p>
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">Active Job Postings</h5>
                        <a href="/Job/Post" class="btn btn-primary">
                            <i class="bi bi-plus"></i> Post New Job
                        </a>
                    </div>
                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">Senior Software Engineer</h6>
                                    <p class="text-muted mb-0">Full-time • Remote • Posted 2 days ago</p>
                                </div>
                                <div class="btn-group">
                                    <button class="btn btn-outline-primary btn-sm">Edit</button>
                                    <button class="btn btn-outline-danger btn-sm">Close</button>
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="mb-1">UX Designer</h6>
                                    <p class="text-muted mb-0">Full-time • On-site • Posted 5 days ago</p>
                                </div>
                                <div class="btn-group">
                                    <button class="btn btn-outline-primary btn-sm">Edit</button>
                                    <button class="btn btn-outline-danger btn-sm">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title mb-3">Company Culture & Benefits</h5>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-laptop text-primary fs-4 me-2"></i>
                                <div>
                                    <h6 class="mb-0">Remote Work Options</h6>
                                    <small class="text-muted">Flexible work environment</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-heart-pulse text-primary fs-4 me-2"></i>
                                <div>
                                    <h6 class="mb-0">Health Insurance</h6>
                                    <small class="text-muted">Comprehensive coverage</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-book text-primary fs-4 me-2"></i>
                                <div>
                                    <h6 class="mb-0">Learning Budget</h6>
                                    <small class="text-muted">Professional development</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-check text-primary fs-4 me-2"></i>
                                <div>
                                    <h6 class="mb-0">Paid Time Off</h6>
                                    <small class="text-muted">Generous vacation policy</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>